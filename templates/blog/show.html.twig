{% extends 'base.html.twig' %}
{% block body %}
	<section class="row articles">

		<article class="col-md-6 mx-auto text-center border border-dark mb-
				3 p-3 mt-3 mr-1">

			<h2>{{ article.title }}</h2>
			<div class="metadata">Ecrit le
				{{ article.createdAt | date('d/m/Y'
) }}
				à
				{{ article.createdAt | date('H:i:s') }}
				dans la catégorie Politique</div><hr>
			<div class="content">
				<img src="{{ article.image }}" class="w-100" alt=""><hr>
				{{ article.content | raw }}
			</div>
		</article>
	</section>
{% endblock %}
